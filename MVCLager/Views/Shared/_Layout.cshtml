@{
    ViewBag.labbel = ViewBag.cartTotal + " artiklar i kundvagnen";
}

@using MVCLager.Helpers;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li class="@Html.IsSelected(actions: "Index", controllers: "Home")">
                         @Html.ActionLink("Hem", "Index", "Home")
                    </li>*@
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="@Html.IsSelected(actions: "Index", controllers: "Shopping")">
                        @Html.ActionLink((string) ViewBag.labbel, "Index", "Shopping")
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="@Html.IsSelected(actions: "Index", controllers: "Carts")">
                                @Html.ActionLink("Kundvagnadmin", "Index", "Carts")
                            </li>
                            <li class="@Html.IsSelected(actions: "Index", controllers: "Items")">
                                @Html.ActionLink("Inventarie", "Index", "Items")
                            </li>
                            <li class="@Html.IsSelected(actions: "Index", controllers: "Categories")">
                                @Html.ActionLink("Kategorier", "Index", "Categories")
                            </li>
                            <li class="@Html.IsSelected(actions: "Contact")">
                                @Html.ActionLink("Kontakta", "Contact", "Home")
                            </li>
                            <li class="@Html.IsSelected(actions: "About")">
                                 @Html.ActionLink("Om oss", "About", "Home")
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Lundström AB</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>